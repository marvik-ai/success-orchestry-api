{
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      // Changed: "always" ensures Ruff applies --fix and organize imports
      "source.fixAll.ruff": "always",
      "source.organizeImports.ruff": "always"
    }
  },
  // Removed : "python.analysis.fixAll" to avoid Ruff conflicts
  "ruff.nativeServer": true,

  "files.exclude": {
    "**/.pytest_cache": true,
    "**/.ruff_cache": true,
    "**/.mypy_cache": true,
    "**/__pycache__": true,
    ".venv": false
  }
}
